#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

function say {
  echo "       $*"
}
function topic {
  echo "-----> $*"
}

BP_DIR="$(cd "$(dirname "$0")"/.. && pwd)"

topic Marking to install shellinabox
echo shellinabox >> $1/Aptfile

topic Writing shellinabox startup script
start_script=$1/bin/${SHELLINABOX_WRAPPER_SCRIPT_NAME:-'start_shellinabox.sh'}
say $start_script
mkdir -p $1/bin
cat <<EOF > $start_script
#!/usr/bin/env bash

shellinaboxd --disable-peer-check -t --port=\${SHELLINABOX_PORT:-\$PORT} -s \${SHELLINABOX_SERVICE:-"/:\$(whoami):dyno:/app:bash"} \$SHELLINABOX_OPTS
EOF
chmod +x $start_script
